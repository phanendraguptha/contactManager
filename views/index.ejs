<%- include ('./partials/header') %>

<section class="container">
  <h1 class="text-center mb-3">All Contacts</h1>
  <% datas.forEach((data)=>{ %>
  <div class="card card-body mb-3">
    <h4 class="mb-3"><%= data.name%> <i class="fas fa-sort-down text-success float-right" onclick="toggle(event)"></i>
    </h4>
    <ul class="list-group" id="hidden">
      <% if(data.dob){ %>
      <li class="list-group-item"><i class="fas fa-calendar-alt"></i> DOB: <%= data.dob%>
        <% } %>
      </li>
      <li class="list-group-item"> <i class="fas fa-envelope"></i> Email1: <%= data.email1%></li>
      <% if(data.email2){ %>
      <li class="list-group-item"> <i class="fas fa-envelope"></i> Email2: <%= data.email2%></li>
      <% } %>
      <li class="list-group-item"> <i class="fas fa-phone"></i> Phone1: <%= data.phone1%></li>
      <% if(data.phone2){ %>
      <li class="list-group-item"> <i class="fas fa-phone"></i> Phone2: <%= data.phone2%></li>
      <% } %>
      <div style="font-size: 25px;" class="mt-3">
        <form class="d-inline float-right" action="/delete/<%=data._id%>?_method=DELETE" method="POST">
          <button class="bt"><i class="far fa-trash-alt text-danger"></i></button>
        </form>
        <a href="/editContact/<%=data._id%>"><i class=" far fa-edit float-right mt-1"></i> </a>
      </div>
    </ul>
  </div>
  <% }); %>

  <ul class="pagination justify-content-center">
    <% if(page ==1){ %>
    <li class="page-item <%=active%>"><a class="page-link" href="/?page=1">1</a></li>
    <% }else{ %>
    <li class="page-item"><a class="page-link" href="/?page=1">1</a></li>
    <% } %>

    <% if(page ==2){ %>
    <li class="page-item <%=active%>"><a class="page-link" href="/?page=2">2</a></li>
    <% }else{ %>
    <li class="page-item"><a class="page-link" href="/?page=2">2</a></li>
    <% } %>

    <% if(page ==3){ %>
    <li class="page-item <%=active%>"><a class="page-link" href="/?page=3">3</a></li>
    <% }else{ %>
    <li class="page-item"><a class="page-link" href="/?page=3">3</a></li>
    <% } %>
  </ul>

  <a href="/addContact" class="btn btn-primary rounded-pill shadow-lg absolute"> <i class="fas fa-plus"></i>
    addContact</a>
</section>

<script src="/js/script.js"></script>

<%- include ('./partials/footer') %>