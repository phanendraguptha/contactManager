<%- include ('./partials/header') %>
<form style="margin-top: 2em" action="/update/<%=data[0]._id%>?_method=PUT" method="POST">
  <div class="container">
    <h2 class="mb-3 text-center">Edit Contact</h2>
    <div class="form-group">
      <label>Name</label>
      <input type="text" required class="form-control" placeholder="Enter Name" name="name" value="<%=data[0].name%>">
    </div>
    <div class="form-group">
      <label>Date</label>
      <input type="date" class="form-control" placeholder="Enter Date" name="dob" value="<%=data[0].dob%>">
    </div>
    <div class="form-group">
      <label>Phone 1</label>
      <input type="number" required class="form-control" placeholder="Enter Phone 1" name="phone1"
        value="<%=data[0].phone1%>">
    </div>
    <div class="form-group">
      <label>Phone 2</label>
      <input type="number" class="form-control" placeholder="Enter Phone 2" name="phone2" value="<%=data[0].phone2%>">
    </div>
    <div class="form-group">
      <label>Email</label>
      <input type="email" required class="form-control" placeholder="Enter Email" name="email1"
        value="<%=data[0].email1%>">
    </div>
    <div class="form-group">
      <label>Email</label>
      <input type="email" class="form-control" placeholder="Enter Email" name="email2" value="<%=data[0].email2%>">
    </div>
    <input type="submit" class="btn btn-primary" value="Update">
  </div>
</form>

<%- include ('./partials/footer') %>