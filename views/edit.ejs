<%- include ('./partials/header') %>

<form style="margin-top: 2em" action="" method="POST">
  <div class="container" style="width: 30%">
    <h2 class="mb-3 text-center">Edit Contact</h2>
    <div class="form-group">
      <label>Name</label>
      <input type="text" class="form-control" placeholder="Enter Name" name="name" value="">
    </div>
    <div class="form-group">
      <label>Date</label>
      <input type="date" class="form-control" placeholder="Enter Date" name="date" value="">
    </div>
    <div class="form-group">
      <label>Phone 1</label>
      <input type="number" class="form-control" placeholder="Enter Phone 1" name="phone 1" value="">
    </div>
    <div class="form-group">
      <label>Phone 2</label>
      <input type="number" class="form-control" placeholder="Enter Phone 2" name="phone 2" value="">
    </div>
    <div class="form-group">
      <label>Email</label>
      <input type="email" class="form-control" placeholder="Enter Email" name="email" value="">
    </div>
    <input type="submit" class="btn btn-primary" value="Update">
  </div>
</form>

